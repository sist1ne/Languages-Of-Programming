<Window x:Class="lab9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab9"
        mc:Ignorable="d"
        Title="Денежное приложение" 
        Height="440" 
        Width="500" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" 
        Background="#FFF3F3F3"
        
>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>

        <Button Content="↔" FontSize="25" HorizontalAlignment="Left" Height="44" Margin="153,74,0,0" VerticalAlignment="Top" Width="44" Click="SwapButton"/>

        <Button HorizontalAlignment="Left" Height="45" Margin="26,154,0,0" VerticalAlignment="Top" Width="190" Click="SubstractionFunc" >
            <TextBlock TextWrapping="Wrap" Width="95"><Run Text="Разница"/><Run Text=" сч"/><Run Text="ё"/><Run Text="тов "/></TextBlock>
        </Button>
        <Button HorizontalAlignment="Left" Height="45" Margin="26,216,0,0" VerticalAlignment="Top" Width="190" Click="IncreaseFunc">
            <TextBlock Width="175" TextWrapping="Wrap"><Run Text="Увеличить"/><Run Text=" "/><Run Text="счёт №1 на копейку "/></TextBlock>
        </Button>
        <Button HorizontalAlignment="Left" Height="45" Margin="26,278,0,0" VerticalAlignment="Top" Width="190" Click="DecreaseFunc">
            <TextBlock TextWrapping="Wrap" Height="23" Width="178"><Run Text="Уменьшить "/><Run Text="счёт №1 "/><Run Text="на копейку"/></TextBlock>
        </Button>
        <Button HorizontalAlignment="Left" Height="45" Margin="26,339,0,0" VerticalAlignment="Top" Width="190" Click="MoneyMinusFunc">
            <TextBlock TextWrapping="Wrap" Width="175"><Run Text="Вычитание "/><Run Text="из "/><Run Text="сч"/><Run Text="ё"/><Run Text="т"/><Run Text="а"/><Run Text=" №1 "/><Run Text="счёт "/><Run Text="№2 "/></TextBlock>
        </Button>

        <Button HorizontalAlignment="Left" Height="45" Margin="38,154,0,0" VerticalAlignment="Top" Width="190" Grid.Column="1" Click="GetRublesFunc">
            <TextBlock TextWrapping="Wrap" Width="175"><Run Text="Получить количество рублей счёта "/><Run Text="№2"/></TextBlock>
        </Button>
        <Button HorizontalAlignment="Left" Height="45" Margin="38,216,0,0" VerticalAlignment="Top" Width="190" Grid.Column="1" Click="GetKopeksFunc">
            <TextBlock TextWrapping="Wrap" Width="176"><Run Text="Получить количество копеек"/><Run Text=" "/><Run Text="счёта №2"/><Run Text=" "/><Run Text="в "/><Run Text="формате "/><Run Text="рубля"/></TextBlock>
        </Button>
        <Button HorizontalAlignment="Left" Height="45" Margin="38,278,0,0" VerticalAlignment="Top" Width="190" Grid.Column="1" Click="AmountMinusFunc">
            <TextBlock TextWrapping="Wrap" Width="173" Height="31"><Run Text="Вычесть из"/><Run Text=" некой суммы "/><Run Text="счёт №2"/><Run Text=" "/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
        </Button>
        <Button HorizontalAlignment="Left" Height="45" Margin="38,339,0,0" VerticalAlignment="Top" Width="190" Grid.Column="1" Click="MinusAmountFunc">
            <TextBlock TextWrapping="Wrap" Width="176"><Run Text="Вычесть из счёта №2 "/><Run Text="некую сумму"/></TextBlock>
        </Button>

        <TextBox Name="Rub1" GotFocus="TextBoxGotFocus" HorizontalAlignment="Left" Height="20" Margin="25,60,0,0" TextWrapping="Wrap" Text="Введите число..." VerticalAlignment="Top" Width="110"/>
        <TextBox Name="Kop1" GotFocus="TextBoxGotFocus" HorizontalAlignment="Left" Height="20" Margin="25,113,0,0" TextWrapping="Wrap" Text="Введите число..." VerticalAlignment="Top" Width="110"/>

        <TextBox Name="Rub2" GotFocus="TextBoxGotFocus" HorizontalAlignment="Left" Height="20" Margin="220,59,0,0" TextWrapping="Wrap" Text="Введите число..." VerticalAlignment="Top" Width="110" Grid.ColumnSpan="2"/>
        <TextBox Name="Kop2" GotFocus="TextBoxGotFocus" HorizontalAlignment="Left" Height="20" Margin="220,112,0,0" TextWrapping="Wrap" Text="Введите число..." VerticalAlignment="Top" Width="110" Grid.ColumnSpan="2"/>

        <TextBox Name="Sum" GotFocus="TextBoxGotFocus" HorizontalAlignment="Left" Height="20" Margin="114,59,0,0" TextWrapping="Wrap" Text="Введите число..." VerticalAlignment="Top" Width="110" Grid.Column="1"/>

        <Label Content="Рубли:" HorizontalAlignment="Left" Margin="34,35,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.263,-0.653" Height="25" Width="92"/>
        <Label Content="Копейки:" HorizontalAlignment="Left" Margin="34,88,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.263,-0.653" Height="25" Width="92"/>
        <Label Content="Рубли:" HorizontalAlignment="Left" Margin="229,34,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.263,-0.653" Height="25" Width="92" Grid.ColumnSpan="2"/>
        <Label Content="Копейки:" HorizontalAlignment="Left" Margin="229,87,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.263,-0.653" Height="25" Width="92" Grid.ColumnSpan="2"/>
        <Label Content="Счет №1" HorizontalAlignment="Left" Margin="34,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.263,-0.653" Height="25" Width="92"/>
        <Label Content="Счет №2" HorizontalAlignment="Left" Margin="229,9,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.263,-0.653" Height="25" Width="92" Grid.ColumnSpan="2"/>
        <Label Content="Некая сумма" HorizontalAlignment="Left" Margin="114,8,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.263,-0.653" Height="26" Width="92" Grid.Column="1"/>
        <Label Content="Рубли:" HorizontalAlignment="Left" Margin="114,34,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.263,-0.653" Height="25" Width="92" Grid.Column="1"/>


    </Grid>
</Window>
